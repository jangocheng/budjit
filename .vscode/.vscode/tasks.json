{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CreateDBDirectories",
            "command": "mkdir",
            "type": "shell",
            "windows": {
                "args": [
                    "${workspaceFolder}/src/budjit.ui/obj/Host/bin/SQLite",
                    "${workspaceFolder}/src/budjit.ui/bin/Debug/netcoreapp2.0/SQLite"
                ]
            },
            "linux": {
                "args": [
                    "-p",
                    "${workspaceFolder}/src/budjit.ui/obj/Host/bin/SQLite",
                    "${workspaceFolder}/src/budjit.ui/bin/Debug/netcoreapp2.0/SQLite"
                ]
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/budjit.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}